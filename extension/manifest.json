{
  "name": "Manila",
  "manifest_version": 2,
  "version": "0.2",
  "offline_enabled": true,
  "UNCOMMENT_ME_LATER_options_page": "options.html",
  "content_scripts": [{
    "matches": [ "<all_urls>" ],
    "js": ["jquery.js" , "html2canvas.min.js", "load-scribble.js", "sjcl.js"  ]
  }],
  "browser_action": {
    "default_icon": "icons/icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
     "activeTab",
     "tabs"
  ],


  "icons": { "16": "icons/icon_19.png",
         "48": "icons/icon_48.png",
        "128": "icons/icon_128.png"
  },

  "chrome_url_overrides": {
      "newtab": "main.html"
  },

  "background": {
    "scripts": ["background.js" ]

  }

}
