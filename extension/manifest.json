{
  "name": "Manila",
  "manifest_version": 2,
  "version": "0.2",
  "offline_enabled": true,
  "content_scripts": [{
    "matches": [ "<all_urls>" ],
    "js": [ "jquery-3.1.1.min.js" , "html2canvas.min.js", "load-scribble.js" ]
  }],
  "browser_action": {
    "default_icon": "icons/icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
     "activeTab",
     "tabs",
    "http://*/*",
      "https://*/*"
  ],


  "icons": { "16": "icons/icon_19.png",
         "48": "icons/icon_48.png",
        "128": "icons/icon_128.png" 
  },

  "chrome_url_overrides": {
      "newtab": "main.html"
  },

  "background": {
    "scripts": ["background.js" ]

  }

}
